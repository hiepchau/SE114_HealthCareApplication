<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="395dp"
                                                   android:layout_height="420dp"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@drawable/background_fragment_menu"
                                                   android:layout_gravity="center"
                                                   tools:context=".status_segment">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="How are u today?"
              android:fontFamily="@font/poppins_regular"
              android:textSize="20dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.474"
              app:layout_constraintVertical_bias="0.075" android:id="@+id/textView12"/>

    <android.widget.Button
            android:layout_width="wrap_content" android:layout_height="40dp"
            android:background="@drawable/btn_happy"
            android:text="Happy"
            android:textSize="20dp"
            android:fontFamily="@font/outfit_regular"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_happy"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.231"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

    <android.widget.Button
            android:layout_width="wrap_content" android:layout_height="40dp"
            android:background="@drawable/btn_normal"
            android:text="Normal"
            android:textSize="20dp"
            android:fontFamily="@font/outfit_regular"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_normal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.381"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

    <android.widget.Button
            android:layout_width="wrap_content" android:layout_height="40dp"
            android:background="@drawable/btn_sad"
            android:text="Sad"
            android:textSize="20dp"
            android:fontFamily="@font/outfit_regular"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_sad"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.531"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

    <EditText
            android:layout_width="350dp" android:layout_height="130dp"
            android:hint="write something for today"
            android:textSize="15dp"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_intro_register"
            android:drawableEnd="@drawable/ic_sent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.889" app:layout_constraintHorizontal_bias="0.488"/>
</androidx.constraintlayout.widget.ConstraintLayout>