<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="420dp"
                                                   android:layout_height="400dp"
                                                   android:background="@drawable/background_fragment_menu"
                                                   android:layout_gravity="center"
                                                   tools:context=".alarm_segment">
    <TextView
            android:text="Bedtime"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.208" app:layout_constraintVertical_bias="0.227"
            android:id="@+id/textView2"/>
    <TextView
            android:text="23:30"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.227" app:layout_constraintVertical_bias="0.072"
            app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Wake up"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.225" app:layout_constraintHorizontal_bias="0.848"
            android:id="@+id/textView3"/>
    <TextView
            android:text="|"
            android:layout_width="2dp"
            android:layout_height="100dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.236"
            app:layout_constraintHorizontal_bias="0.501" android:id="@+id/textView5"/>
    <TextView
            android:text="6:30"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.816" app:layout_constraintVertical_bias="0.072"
            android:id="@+id/textView" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Reminder notification"
            android:fontFamily="@font/poppins_regular"
            android:textSize="18dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.453" app:layout_constraintVertical_bias="0.8"
            app:layout_constraintEnd_toStartOf="@+id/toggleBtnAlarm"/>
    <Button android:layout_width="90dp" android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_confirm"
            android:hint="Confirm" app:layout_constraintVertical_bias="0.231"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <ToggleButton
            android:id="@+id/toggleBtnAlarm"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.84" app:layout_constraintVertical_bias="0.818"/>

</androidx.constraintlayout.widget.ConstraintLayout>