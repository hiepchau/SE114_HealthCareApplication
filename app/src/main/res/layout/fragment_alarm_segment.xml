<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="395dp"
        android:layout_height="420dp"
        android:background="@drawable/background_fragment_menu"
        android:layout_gravity="center"
        tools:context=".view.components.alarm_segment"
        android:clickable="true">


    <com.webianks.library.scroll_choice.ScrollChoice
            android:id="@+id/sleepmin_choice"
            android:layout_height="120dp"
            android:layout_width="60dp"
            app:scroll_background_color="@color/background_blue"
            app:scroll_selected_item_background="@color/white"
            app:scroll_item_text_color="?attr/colorPrimaryDark"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#ffc107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.236"/>
    <com.webianks.library.scroll_choice.ScrollChoice
            android:id="@+id/sleephrs_choice"
            android:layout_height="120dp"
            android:layout_width="60dp"
            app:scroll_background_color="@color/background_blue"
            app:scroll_selected_item_background="@color/white"
            app:scroll_item_text_color="?attr/colorPrimaryDark"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#ffc107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.236"/>
    <com.webianks.library.scroll_choice.ScrollChoice
            android:layout_height="120dp"
            android:id="@+id/wakehrs_choice"
            android:layout_width="60dp"
            app:scroll_background_color="@color/background_blue"
            app:scroll_selected_item_background="@color/white"
            app:scroll_item_text_color="?attr/colorPrimaryDark"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#ffc107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.701"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.236"/>
    <com.webianks.library.scroll_choice.ScrollChoice
            android:id="@+id/wakemin_choice"
            android:layout_height="120dp"
            android:layout_width="60dp"
            app:scroll_background_color="@color/background_blue"
            app:scroll_selected_item_background="@color/white"
            app:scroll_item_text_color="?attr/colorPrimaryDark"
            app:scroll_atmospheric="true"
            app:scroll_indicator="true"
            app:scroll_item_align="center"
            app:scroll_selected_item_text_color="#ffc107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.898"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.236"/>

    <TextView
            android:text="Reminder notification"
            android:fontFamily="@font/outfit_bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintVertical_bias="0.861"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button android:layout_width="90dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_confirm"
            android:hint="Confirm"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.671"
            android:id="@+id/button"/>
    <ToggleButton
            android:id="@+id/toggleBtnAlarm"
            android:background="@drawable/btn_intro"
            android:layout_width="120dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintVertical_bias="0.876"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=":"
              android:textSize="20dp"
              android:fontFamily="@font/outfit_regular"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.246"
              app:layout_constraintVertical_bias="0.294"
              android:id="@+id/textView5"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=":"
              android:textSize="20dp"
              android:fontFamily="@font/outfit_bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.758"
              app:layout_constraintVertical_bias="0.294"
              android:id="@+id/textView2"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Bed Time"
              android:fontFamily="@font/outfit_regular"
              android:textSize="20dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.183"
              app:layout_constraintVertical_bias="0.12"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Wake up"
              android:fontFamily="@font/outfit_regular"
              android:textSize="20dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.795"
              app:layout_constraintVertical_bias="0.12"
              android:id="@+id/textView3"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_bedtime"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHorizontal_bias="0.196"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.536"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_wake_up"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHorizontal_bias="0.803"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.536"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_cloud"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHorizontal_bias="0.498"
               android:layout_marginBottom="272dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>