<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:background="@color/background_blue"
             tools:context=".UserFragment">


    <!--Open Manage data-->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="match_parent">


        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Email" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.053"
                app:layout_constraintVertical_bias="0.242"/>


        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="20520525@gm.uit.edu.vn" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.863"
                app:layout_constraintVertical_bias="0.241"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Birthday" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintVertical_bias="0.324"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Aug 18,1990"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.897"
                app:layout_constraintVertical_bias="0.324"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Height" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintVertical_bias="0.404"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="175 cm"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.906"
                app:layout_constraintVertical_bias="0.404"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Weight" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.054"
        />
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="75 kg" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.909"
                app:layout_constraintVertical_bias="0.516"/>
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Gender" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.051"
                app:layout_constraintVertical_bias="0.588"/>
        <android.widget.ToggleButton
                android:layout_width="60dp" android:layout_height="25dp"
                android:text="Male"
                android:textOff="Male"
                android:textOn="Female"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/background_gender" android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.903"
                app:layout_constraintVertical_bias="0.593"/>
        <android.widget.Button
                android:layout_width="390dp" android:layout_height="40dp"
                android:background="@drawable/background_fragment_menu"
                android:text="Sign out"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center"
                android:drawableStart="@drawable/ic_sign_out"
                android:drawableEnd="@drawable/ic_open"
                android:id="@+id/btn_logout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.858" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.238"/>
        <android.widget.Button
                android:layout_width="390dp" android:layout_height="40dp"
                android:background="@drawable/background_fragment_menu"
                android:text="Manage my data"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:drawableStart="@drawable/ic_manage_account"
                android:drawableEnd="@drawable/ic_open"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.767"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.238"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>