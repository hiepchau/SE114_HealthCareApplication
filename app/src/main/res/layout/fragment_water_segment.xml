<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="#4051E7"
             tools:context=".water_segment">

    <!-- TODO: Update blank fragment layout -->






    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Datetime"
            android:text="Date time"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="38dp" android:layout_marginStart="50dp"
            android:textSize="18dp"
    />
    <TextView
            android:text="Hi_Peter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="93dp" android:layout_marginStart="52dp"
            android:id="@+id/name"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/white"/>
    <ImageView
            android:layout_width="102dp"
            android:layout_height="99dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp" android:layout_marginStart="154dp"
            app:layout_constraintStart_toEndOf="@+id/name" android:layout_marginEnd="13dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text=""
            android:layout_width="413dp"
            android:layout_height="495dp" android:id="@+id/bg"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/somerandombg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="234dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Daily goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:layout_marginTop="305dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#1BAEEE"
    />
    <TextView
            android:text="Drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:layout_marginTop="444dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#1BAEEE"
    />
    <TextView
            android:text="4000 ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/DailyGoalValue"
            android:layout_marginTop="372dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#C0C0C0"
    />
    <TextView
            android:text="0 ml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/CompleteValue"
            android:layout_marginTop="372dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:layout_marginStart="280dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#C0C0C0"
    />
    <TextView
            android:text="Complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TextView6"
            android:layout_marginTop="304dp"
            android:background="#4051E7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="264dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#1BAEEE"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="?attr/colorAccent"
    >
        <com.webianks.library.scroll_choice.ScrollChoice android:layout_width="match_parent"
                                                         android:layout_height="match_parent"
                                                         app:scroll_background_color="#f5f5f5"
                                                         app:scroll_selected_item_background="#fff"
                                                         app:scroll_item_text_color="?attr/colorAccent"
                                                         app:scroll_atmospheric="true"
                                                         app:scroll_indicator="true"
                                                         app:scroll_item_align="center"
                                                         app:scroll_selected_item_text_color="#ffc107"
                                                         android:id="@+id/Scrollchoice123"
                                                         ></com.webianks.library.scroll_choice.ScrollChoice>
    </LinearLayout>

</FrameLayout>