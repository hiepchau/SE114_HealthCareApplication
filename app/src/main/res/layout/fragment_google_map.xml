<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="395dp"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:background="@drawable/background_fragment_menu"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.components.GoogleMapFragment">


    <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/map_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/text_clock"
            android:textSize="20dp"
            android:fontFamily="@font/outfit_bold"
            android:gravity="center"
            android:layout_centerHorizontal="true" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintVertical_bias="0.07" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/btn_start"
            android:background="@drawable/btn_intro"
            android:layout_alignParentLeft="true"
            android:text="Start"
            android:fontFamily="@font/outfit_bold"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.957"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:id="@+id/btn_clear"
            android:background="@drawable/btn_confirm"
            android:layout_alignParentLeft="true"
            android:text="Clear"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/outfit_bold"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.843" app:layout_constraintVertical_bias="0.056"/>
</androidx.constraintlayout.widget.ConstraintLayout>