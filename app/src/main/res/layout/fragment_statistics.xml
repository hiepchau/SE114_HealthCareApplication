<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_gravity="center"
                                                   android:background="@color/background_blue"
                                                   tools:context=".view.bottom_nav.StatisticsFragment">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Compiled data storage 7 days."
              android:fontFamily="@font/outfit_bold"
              android:textSize="18dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_statistic" android:layout_marginTop="12dp"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/ic_statistics_2"
               app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.498" app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/imageView7" android:layout_marginTop="24dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Statistics"
              android:fontFamily="@font/outfit_bold"
              android:textSize="30dp"
              android:gravity="center" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.498"
              android:id="@+id/tv_statistic"
              app:layout_constraintTop_toBottomOf="@+id/imageView7" android:layout_marginTop="24dp"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="@drawable/btn_sad"
                    android:clickable="true"
                    android:id="@+id/statistic_water_rlt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_statistic"
                    tools:layout_editor_absoluteX="0dp"
                    app:layout_constraintVertical_bias="0.111">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_water"
                   android:layout_alignParentEnd="true" android:layout_marginEnd="341dp"
                   android:layout_alignParentStart="true" android:layout_marginStart="30dp"
        />
        <LinearLayout
                android:layout_marginLeft="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Water"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <!--3 status rating: excellent, good, not good-->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"
                      android:text="Status"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="180dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Total"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="10000 ml"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="300dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Rate"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="30 %"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="@drawable/btn_normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clickable="true"
                    android:id="@+id/statistic_steps_rlt"
                    app:layout_constraintTop_toBottomOf="@+id/tv_statistic" tools:layout_editor_absoluteX="0dp"
                    app:layout_constraintVertical_bias="0.304">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_step"
                   android:layout_alignParentEnd="true" android:layout_marginEnd="341dp"
                   android:layout_alignParentStart="true" android:layout_marginStart="30dp"
        />
        <LinearLayout
                android:layout_marginLeft="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Walk"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <!--3 status rating: excellent, good, not good-->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"
                      android:text="Status"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="170dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Total"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="10000 steps"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="300dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Rate"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="100 %"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp"
                    android:background="@drawable/btn_happy"
                    android:id="@+id/statistic_sleep_rlt"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_statistic" tools:layout_editor_absoluteX="0dp"
                    app:layout_constraintVertical_bias="0.485">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_step"
                   android:layout_alignParentEnd="true" android:layout_marginEnd="341dp"
                   android:layout_alignParentStart="true" android:layout_marginStart="30dp"
        />
        <LinearLayout
                android:layout_marginLeft="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Sleep"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <!--3 status rating: Healthy, Good enough, Dangerous -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"
                      android:text="Status"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="185dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Total"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="50 hours"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginLeft="300dp"
                android:orientation="vertical"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Rate"
                      android:fontFamily="@font/outfit_bold"
                      android:textSize="24dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="70 %"
                      android:fontFamily="@font/outfit_regular"
                      android:textSize="20dp"/>
        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>