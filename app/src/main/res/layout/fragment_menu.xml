<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="395dp"
                                                   android:layout_height="420dp"
                                                   android:layout_gravity="center"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@drawable/background_fragment_menu"
                                                   tools:context=".MenuFragment">

    <RelativeLayout
            android:layout_width="120dp" android:layout_height="150dp"
            android:background="@drawable/btn_water"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.181" app:layout_constraintVertical_bias="0.177">

        <android.widget.Button
                android:id="@+id/btn_water"
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="3000 ml"
                android:textSize="18dp"
                android:background="@drawable/btn_water" android:layout_alignParentBottom="true"
                android:layout_marginBottom="31dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_marginTop="99dp" android:layout_alignParentTop="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Water"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:textSize="18dp" android:layout_alignParentBottom="true" android:layout_marginBottom="41dp"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="18dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="21dp"
                  android:layout_marginTop="49dp" android:layout_alignParentTop="true"/>
        <ImageView
                android:src="@drawable/ic_water"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" android:layout_marginBottom="101dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="37dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="120dp" android:layout_height="150dp"
            android:background="@drawable/btn_steps"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.763" app:layout_constraintVertical_bias="0.177">

        <android.widget.Button
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="3000 steps"
                android:textSize="18dp"
                android:id="@+id/btn_steps"
                android:background="@drawable/btn_steps" android:layout_alignParentBottom="true"
                android:layout_marginBottom="31dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_marginTop="99dp" android:layout_alignParentTop="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Steps"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:textSize="18dp" android:layout_alignParentBottom="true" android:layout_marginBottom="40dp"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="16dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="23dp"
                  android:layout_marginTop="50dp" android:layout_alignParentTop="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_step" android:layout_alignParentEnd="true"
                   android:layout_marginEnd="40dp" android:layout_alignParentBottom="true"
                   android:layout_marginBottom="102dp" android:layout_alignParentStart="true"
                   android:layout_marginStart="40dp" android:layout_marginTop="8dp"
                   android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="120dp" android:layout_height="150dp"
            android:background="@drawable/btn_water"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.763" app:layout_constraintVertical_bias="0.885">

        <android.widget.Button
                android:id="@+id/btn_alarm"
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="20:00 pm"
                android:textSize="18dp"
                android:background="@drawable/btn_water" android:layout_alignParentBottom="true"
                android:layout_marginBottom="31dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_marginTop="99dp" android:layout_alignParentTop="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Sleep"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:textSize="18dp" android:layout_alignParentBottom="true" android:layout_marginBottom="44dp"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="20dp"
                  android:layout_marginTop="46dp" android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_sleep" android:layout_alignParentEnd="true" android:layout_marginEnd="41dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="102dp"
                android:layout_alignParentStart="true" android:layout_marginStart="39dp" android:layout_marginTop="9dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="logout"
            android:id="@+id/logout_btn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.084" app:layout_constraintVertical_bias="0.0"/>

    <RelativeLayout
            android:layout_width="120dp" android:layout_height="150dp"
            android:background="@drawable/btn_water"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.181" app:layout_constraintVertical_bias="0.885">

        <android.widget.Button
                android:id="@+id/btn_bmi"
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="15.6 bmi"
                android:textSize="18dp"
                android:background="@drawable/btn_water" android:layout_alignParentBottom="true"
                android:layout_marginBottom="31dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_marginTop="99dp" android:layout_alignParentTop="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="BMI"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:textSize="18dp" android:layout_alignParentBottom="true" android:layout_marginBottom="44dp"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="20dp"
                  android:layout_marginTop="46dp" android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_bmi" android:layout_alignParentEnd="true" android:layout_marginEnd="41dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="102dp"
                android:layout_alignParentStart="true" android:layout_marginStart="39dp" android:layout_marginTop="9dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



