<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="420dp"
                                                   android:layout_height="400dp"
                                                   android:layout_gravity="center"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@drawable/background_fragment_menu"
                                                   tools:context=".HomeFragment">

    <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_water"
            android:fontFamily="@font/roboto_regular"
            android:hint="Alarm"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_margin="30dp"
            android:id="@+id/AlarmBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.79"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/btn_steps"/>
    <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_steps"
            android:fontFamily="@font/roboto_regular"
            android:hint="Steps"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_margin="30dp"
            android:id="@+id/btn_steps" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.806"
            app:layout_constraintVertical_bias="0.064"/>
    <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_water"
            android:fontFamily="@font/roboto_regular"
            android:hint="Water"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:id="@+id/btn_water"
            android:layout_margin="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.654"
            app:layout_constraintVertical_bias="0.064" app:layout_constraintEnd_toStartOf="@+id/btn_steps"/>
    <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_steps"
            android:fontFamily="@font/roboto_regular"
            android:hint="BMI"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:id="@+id/btn_bmi"
            android:layout_margin="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintVertical_bias="0.517" app:layout_constraintEnd_toStartOf="@+id/AlarmBtn"
            app:layout_constraintTop_toBottomOf="@+id/btn_water"/>

</androidx.constraintlayout.widget.ConstraintLayout>