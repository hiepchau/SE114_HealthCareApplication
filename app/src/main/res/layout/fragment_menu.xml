<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="395dp"
                                                   android:layout_height="420dp"
                                                   android:layout_gravity="center"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="@drawable/background_fragment_menu"
                                                   tools:context=".MenuFragment">

    <RelativeLayout
            android:layout_width="100dp" android:layout_height="150dp"
            android:background="@drawable/btn_water"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.058" app:layout_constraintVertical_bias="0.177">

        <android.widget.Button
                android:id="@+id/btn_water"
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="3000 ml"
                android:textSize="18dp"
                android:background="@drawable/btn_water" android:layout_alignParentBottom="true"
                android:layout_marginBottom="31dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_marginTop="99dp" android:layout_alignParentTop="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Water"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:textSize="18dp" android:layout_alignParentBottom="true" android:layout_marginBottom="41dp"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="18dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="21dp"
                  android:layout_marginTop="49dp" android:layout_alignParentTop="true"/>
        <ImageView
                android:src="@drawable/ic_water"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" android:layout_marginBottom="96dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="30dp"
                android:layout_alignParentStart="true" android:layout_marginStart="30dp" android:layout_marginTop="14dp"
                android:layout_alignParentTop="true"/>

    </RelativeLayout>


    <RelativeLayout
            android:layout_width="100dp" android:layout_height="150dp"
            android:background="@drawable/btn_steps"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.057" app:layout_constraintVertical_bias="0.844">

        <android.widget.Button
                android:layout_width="76dp" android:layout_height="28dp"
                android:hint="3000 steps"
                android:textSize="14dp"
                android:id="@+id/btn_steps"
                android:background="@drawable/btn_steps" android:layout_alignParentBottom="true"
                android:layout_marginBottom="23dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_marginTop="99dp" android:layout_alignParentTop="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Steps"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:textSize="18dp" android:layout_alignParentBottom="true" android:layout_marginBottom="41dp"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="20dp"
                  android:layout_marginTop="49dp" android:layout_alignParentTop="true"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_step"
                   android:layout_alignParentEnd="true" android:layout_marginEnd="31dp"
                   android:layout_alignParentBottom="true" android:layout_marginBottom="102dp"
                   android:layout_marginTop="8dp" android:layout_alignParentTop="true"
                   android:layout_alignParentStart="true" android:layout_marginStart="29dp"/>

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="100dp" android:layout_height="150dp"
            android:background="@drawable/btn_steps"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.177"
            android:id="@+id/relativeLayout">

        <android.widget.Button
                android:id="@+id/btn_alarm"
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="20:00 pm"
                android:textSize="18dp"
                android:background="@drawable/btn_steps" android:layout_alignParentBottom="true"
                android:layout_marginBottom="31dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_marginTop="99dp" android:layout_alignParentTop="true"/>
        <TextView android:layout_width="57dp" android:layout_height="61dp"
                  android:text="Sleep"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:textSize="18dp" android:layout_alignParentBottom="true" android:layout_marginBottom="42dp"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="23dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="20dp"
                  android:layout_marginTop="46dp" android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_sleep"
                android:layout_alignParentEnd="true" android:layout_marginEnd="31dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="97dp"
                android:layout_alignParentStart="true" android:layout_marginStart="29dp" android:layout_marginTop="13dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="100dp" android:layout_height="150dp"
            android:background="@drawable/btn_water"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.945" app:layout_constraintVertical_bias="0.177"
            android:id="@+id/relativeLayout3">

        <android.widget.Button
                android:id="@+id/btn_bmi"
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="15.6 bmi"
                android:textSize="18dp"
                android:background="@drawable/btn_water" android:layout_alignParentBottom="true"
                android:layout_marginBottom="31dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="11dp" android:layout_alignParentStart="true"
                android:layout_marginStart="9dp" android:layout_marginTop="99dp" android:layout_alignParentTop="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="BMI"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:textSize="18dp" android:layout_alignParentBottom="true" android:layout_marginBottom="44dp"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"
                  android:layout_alignParentStart="true" android:layout_marginStart="20dp"
                  android:layout_marginTop="46dp" android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_bmi"
                android:layout_alignParentEnd="true" android:layout_marginEnd="28dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="97dp"
                android:layout_alignParentStart="true" android:layout_marginStart="32dp" android:layout_marginTop="13dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="100dp" android:layout_height="150dp"
            android:background="@drawable/btn_water" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.844" android:id="@+id/relativeLayout2">

        <TextView android:layout_width="80dp" android:layout_height="20dp"
                  android:text="Run"
                  android:textSize="18dp"
                  android:gravity="center"
                  android:fontFamily="@font/poppins_regular"
                  android:layout_alignParentEnd="true" android:layout_marginEnd="11dp"
                  android:layout_marginTop="66dp" android:layout_alignParentTop="true"
                  android:layout_alignParentStart="true" android:layout_marginStart="9dp"
                  android:layout_alignParentBottom="true" android:layout_marginBottom="64dp"/>
        <android.widget.Button
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="500 m"
                android:textSize="18dp"
                android:background="@drawable/btn_water"
                android:layout_alignParentBottom="true" android:layout_marginBottom="24dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="8dp" android:layout_marginTop="106dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"/>
        <ImageView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_run" android:layout_alignParentEnd="true" android:layout_marginEnd="30dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="102dp"
                android:layout_alignParentStart="true" android:layout_marginStart="30dp"
                android:layout_marginTop="8dp" android:layout_alignParentTop="true"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="100dp" android:layout_height="150dp"
            android:background="@drawable/btn_steps" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.945"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.844">

        <TextView
                android:layout_width="80dp" android:layout_height="20dp"
                android:text="Status"
                android:textSize="18dp"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:layout_alignParentEnd="true" android:layout_marginEnd="11dp"
                android:layout_marginTop="66dp" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" android:layout_marginStart="9dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="64dp"/>

        <android.widget.Button
                android:layout_width="80dp" android:layout_height="20dp"
                android:hint="Good"
                android:textSize="18dp"
                android:background="@drawable/btn_steps"
                android:layout_alignParentBottom="true" android:layout_marginBottom="24dp"
                android:layout_alignParentEnd="true" android:layout_marginEnd="8dp" android:layout_marginTop="106dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"/>

        <ImageView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="@drawable/ic_stories" android:layout_alignParentEnd="true"
                android:layout_marginEnd="29dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="94dp" android:layout_alignParentStart="true"
                android:layout_marginStart="31dp" android:layout_marginTop="16dp"
                android:layout_alignParentTop="true"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



