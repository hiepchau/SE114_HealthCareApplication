<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".notify_email_send">

    <ImageView
            android:layout_width="300dp" android:layout_height="300dp"
            android:src="@drawable/img_welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:id="@+id/imageView8"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:fontFamily="@font/outfit_bold"
            android:gravity="center"
            android:textSize="20dp"
            android:drawableBottom="@drawable/ic_welcome"
            android:text="Welcome, please verify your email address by clicking on the button below"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/textView16" app:layout_constraintTop_toBottomOf="@+id/imageView8"/>
    <android.widget.Button
            android:layout_width="140dp" android:layout_height="30dp"
            android:background="@drawable/btn_happy" app:layout_constraintEnd_toEndOf="parent"
            android:text="Verify Email"
            android:fontFamily="@font/outfit_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/btn_verify_email"
            app:layout_constraintTop_toBottomOf="@+id/textView16"
            android:layout_marginTop="40dp"/>
    <android.widget.Button
            android:layout_width="140dp" android:layout_height="30dp"
            android:text="Back to login"
            android:background="@drawable/btn_normal"
            android:fontFamily="@font/outfit_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="112dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/btn_verify_email"
            app:layout_constraintVertical_bias="0.262"/>
</androidx.constraintlayout.widget.ConstraintLayout>