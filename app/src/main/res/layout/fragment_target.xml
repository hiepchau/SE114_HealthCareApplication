<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/background_blue"
        tools:context=".view.bottom_nav.TargetFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">


        <android.widget.Button
                app:layout_constraintVertical_bias="0.041"
                app:layout_constraintHorizontal_bias="0.522"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:background="@color/background_blue"
                android:text="Daily goal"
                android:textSize="16dp"
                android:id="@+id/btn_calendar"
                android:fontFamily="@font/outfit_bold"
                android:drawableEnd="@drawable/ic_calender"
        />

        <TextView
                android:background="@drawable/btn_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Date"
                android:fontFamily="@font/outfit_regular"
                android:gravity="center"
                android:id="@+id/date_txv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintVertical_bias="0.162"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Water"
                  android:textSize="16dp"
                  android:fontFamily="@font/poppins_regular"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintHorizontal_bias="0.462"
                  app:layout_constraintVertical_bias="0.289"
                  android:id="@+id/textView11"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="16dp"
                  android:text="Steps"
                  android:fontFamily="@font/poppins_regular"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintHorizontal_bias="0.455"
                  app:layout_constraintVertical_bias="0.446"/>
        <TextView android:layout_width="49dp"
                  android:layout_height="23dp"
                  android:text="Sleep"
                  android:textSize="16dp"
                  android:fontFamily="@font/poppins_regular"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintHorizontal_bias="0.461"
                  app:layout_constraintVertical_bias="0.607"
                  android:id="@+id/textView10"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:id="@+id/water_prs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.405"
                app:layout_constraintVertical_bias="0.323"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:id="@+id/steps_prs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.405"
                app:layout_constraintVertical_bias="0.476"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:id="@+id/sleep_prs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.386"
                app:layout_constraintVertical_bias="0.633"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0 steps"
                  android:textSize="14dp"
                  android:fontFamily="@font/outfit_regular"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintHorizontal_bias="0.106"
                  app:layout_constraintVertical_bias="0.499"
                  android:id="@+id/minsteps"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/minwater"
                  android:text="0 ml"
                  android:textSize="14dp"
                  android:fontFamily="@font/outfit_regular"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintHorizontal_bias="0.106"
                  app:layout_constraintVertical_bias="0.346"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="14dp"
                  android:text="0 hour"
                  android:id="@+id/minhour"
                  android:fontFamily="@font/outfit_regular"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintHorizontal_bias="0.105"
                  app:layout_constraintVertical_bias="0.655"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="3000 ml"
                  android:id="@+id/maxwater"
                  android:fontFamily="@font/outfit_regular"
                  android:textSize="14dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_bias="0.345"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.835"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="3000 steps"
                  android:fontFamily="@font/outfit_regular"
                  android:textSize="14dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.823"
                  app:layout_constraintVertical_bias="0.499"
                  android:id="@+id/maxsteps"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="8 hours"
                  android:id="@+id/maxhour"
                  android:fontFamily="@font/outfit_regular"
                  android:textSize="14dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintHorizontal_bias="0.83"
                  app:layout_constraintVertical_bias="0.655"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Status"
                android:textSize="14dp"
                android:fontFamily="@font/outfit_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView28"
                app:layout_constraintVertical_bias="0.833"
                android:id="@+id/editText"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:background="@drawable/btn_intro_register"
                  android:gravity="center"
                  android:drawableStart="@drawable/ic_write"
                  app:layout_constraintBottom_toTopOf="@+id/textView28"
                  android:layout_marginBottom="12dp" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/editText"
                  app:layout_constraintHorizontal_bias="0.123" app:layout_constraintVertical_bias="0.0"/>
        <ImageView
                android:layout_width="50dp" android:layout_height="50dp"
                android:background="@null"
                android:id="@+id/rating_emoji" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.853" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textView28" app:layout_constraintVertical_bias="0.927"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“One part at a time, one day at a time, we can accomplish any goal we set for ourselves.” — Karen Casey."
                android:fontFamily="@font/outfit_bold"
                android:gravity="center"
                android:drawableEnd="@drawable/ic_target_cloud"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.995"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:id="@+id/textView28"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>