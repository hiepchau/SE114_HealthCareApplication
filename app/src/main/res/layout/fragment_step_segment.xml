<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="#4051E7"
             tools:context=".water_segment">

    <!-- TODO: Update blank fragment layout -->






    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Datetime"
            android:text="Date time"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="38dp" android:layout_marginStart="50dp"
            android:textSize="18dp"
    />
    <TextView
            android:text="Hi_Peter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="93dp" android:layout_marginStart="52dp"
            android:id="@+id/name"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/white"/>
    <TextView
            android:text="Status today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#000000"
            android:layout_marginTop="139dp" android:layout_marginStart="29dp"
            android:id="@+id/status"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent" />
    <TextView
            android:text="Travel and you will be born for the second time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/gray"
            android:layout_marginTop="180dp" android:layout_marginStart="29dp"
            android:id="@+id/statustext"
            android:textSize="13dp"
            app:layout_constraintTop_toTopOf="parent" />
    <ImageView
            android:layout_width="102dp"
            android:layout_height="99dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp" android:layout_marginStart="154dp"
            app:layout_constraintStart_toEndOf="@+id/name" android:layout_marginEnd="13dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text=""
            android:layout_width="413dp"
            android:layout_height="495dp" android:id="@+id/bg"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/somerandombg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="234dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Daily goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:layout_marginTop="305dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#EC9A3A"
    />
    <TextView
            android:text="3000 steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/DailyGoalStepValue"
            android:layout_marginTop="372dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#C0C0C0"
    />
    <TextView
            android:text="0 step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/CompleteValue"
            android:layout_marginTop="372dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:layout_marginStart="280dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#C0C0C0"
    />
    <TextView
            android:text="Complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TextView6"
            android:layout_marginTop="304dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="264dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="24dp"
            android:textColor="#EC9A3A"
    />
    <Button
            android:text="Button"
            android:layout_width="24dp"
            android:layout_height="17dp" android:id="@+id/buttonturnback"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="260dp" android:layout_marginStart="60dp"
            android:drawableLeft="@drawable/ic_smallback"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:scaleType="fitXY"
    />
    <TextView
            android:text="75%"
            android:textSize="40dp"
            android:layout_width="413dp"
            android:layout_height="495dp" android:id="@+id/percentage"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="234dp"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="of 3000 steps"
            android:textSize="20dp"
            android:layout_width="413dp"
            android:layout_height="495dp" android:id="@+id/ofvaluefoot"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="280dp"
            app:layout_constraintVertical_bias="1.0"/>

</FrameLayout>